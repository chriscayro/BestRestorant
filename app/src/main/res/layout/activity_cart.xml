<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mystique.kim.easyrestaurantapp.CartActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cart_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/cart_empty_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="CART IS EMPTY. SELECT ITEMS FROM THE MENUS."
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/lowerSec"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@android:color/holo_orange_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount: "
            android:textSize="18dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/cart_total_amount_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:text="KSh. 1000" />

        <Button
            android:id="@+id/checkout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="PROCEED TO CHECKOUT"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

</RelativeLayout>
